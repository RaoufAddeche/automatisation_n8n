# PostgreSQL Configuration
POSTGRES_USER=admin_user_db
POSTGRES_PASSWORD=change_me_to_secure_password
POSTGRES_DB=n8n_database

# n8n Database Configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=db
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n_database
DB_POSTGRESDB_USER=admin_user_db
DB_POSTGRESDB_PASSWORD=change_me_to_secure_password

# n8n Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=n8n_admin_user
N8N_BASIC_AUTH_PASSWORD=change_me_to_secure_password

# n8n Server Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# n8n Advanced Settings
N8N_RUNNERS_ENABLED=true
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# GitHub Configuration
# Créer un token ici : https://github.com/settings/tokens
# Permissions nécessaires : repo (lecture), metadata (lecture)
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_USERNAME=your_github_username

# Sidecar MCP Configuration
SIDECAR_PORT=8080

# Notifications (optionnel)
# Slack : Créer un webhook ici : https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Telegram (alternatif à Slack)
TELEGRAM_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZ
TELEGRAM_CHAT_ID=123456789